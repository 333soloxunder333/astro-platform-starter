            color: #bbb; font-size: 1.6rem; transition: all 0.3s;
        }
        .social-links a:hover { color: white; transform: scale(1.1); }

        .music-player {
            background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 10px; margin-top: 20px;
        }
        .music-player p { font-size: 0.8rem; margin-bottom: 10px; color: #ddd; }
        audio {
            width: 100%; height: 30px; opacity: 0.7;
            filter: invert(1) hue-rotate(180deg); 
        }

        footer { margin-top: 20px; color: #555; font-size: 0.7rem; }

        @keyframes bounce {
