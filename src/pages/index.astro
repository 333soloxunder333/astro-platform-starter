        }

        .gallery-card {
            padding: 20px;
        }

        .gallery-card h2 {
            font-size: 1.5rem; margin-bottom: 5px;
        }
        .subtitle {
            color: #bbb; font-size: 0.8rem; margin-bottom: 20px;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .gallery-item {
            overflow: hidden;
            border-radius: 10px;
            border: 2px solid rgba(255,255,255,0.1);
            transition: transform 0.3s ease;
            aspect-ratio: 1 / 1;
        }

        .gallery-item img {
            width: 100%; height: 100%; object-fit: cover;
            transition: transform 0.5s ease;
        }

        .gallery-item:hover {
            transform: scale(1.02);
            border-color: #ffffff;
        }
        .gallery-item:hover img {
            transform: scale(1.1);
        }

        .scroll-indicator {
            margin-top: 30px;
            color: #888;
            font-size: 0.9rem;
            animation: bounce 2s infinite;
        }
        .scroll-indicator i { margin-top: 5px; display: block; }

        .avatar-container {
            position: relative; width: 120px; margin: 0 auto 20px;
        }
