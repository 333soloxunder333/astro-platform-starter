            height: 15px;
            margin-left: 5px;
        }

        .bar {
            width: 3px;
            background-color: #1DB954;
            height: 3px;
            border-radius: 2px;
        }

        .spotify-widget.playing .bar {
            animation: bounceBars 1s infinite ease-in-out;
        }
        .spotify-widget.playing .bar:nth-child(1) { animation-delay: 0.0s; }
        .spotify-widget.playing .bar:nth-child(2) { animation-delay: 0.2s; }
        .spotify-widget.playing .bar:nth-child(3) { animation-delay: 0.4s; }

        @keyframes bounceBars {
            0%, 100% { height: 3px; }
            50% { height: 15px; }
        }

        /* TARJETAS */
        .card {
            background: rgba(20, 20, 20, 0.85);
            border-radius: 20px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            width: 90%; 
            max-width: 450px;
            box-shadow: 0 0 30px rgba(0,0,0,0.8);
            margin-top: 50px;
            padding: 40px;
            animation: fadeIn 1s ease-out;
        }

        .profile-card {
